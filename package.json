{
  "name": "vibecraft",
  "version": "0.2.0",
  "description": "2D village visualization of Claude Code",
  "author": "nearcyan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nearcyan/vibecraft"
  },
  "keywords": [
    "claude",
    "claude-code",
    "visualization",
    "3d",
    "vibecoding",
    "ai",
    "developer-tools"
  ],
  "type": "module",
  "bin": {
    "vibecraft": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "hooks/",
    "dist/",
    "!dist/**/*.map",
    "data/.gitkeep"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:client": "tsc && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "preview": "vite preview",
    "server": "tsx server/index.ts",
    "prepack": "npm run build",
    "prepublishOnly": "npm run build",
    "deploy": "./scripts/deploy.sh",
    "release": "./scripts/release.sh"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.11.3",
    "@imgly/background-removal-node": "^1.4.5",
    "chokidar": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tone": "^15.1.22",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/ws": "^8.5.13",
    "@vitejs/plugin-react": "^4.3.0",
    "concurrently": "^9.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  }
}
